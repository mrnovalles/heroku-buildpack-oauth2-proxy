#!/usr/bin/env bash

set -eo pipefail

OAUTH2_PROXY_VERSION="v6.0.0"
OAUTH2_PROXY_CHECKSUM="72a2d064e3b65e998fe5a43cda7333ebceb7ea7ffb1bada7c5d6967f95a43186"

BP_DIR="$(cd $(dirname "$0"); pwd)"
BUILD_DIR="$1"

mkdir -p "$BUILD_DIR/bin"

echo "downloading oauth2-proxy..."
wget --no-verbose "https://github.com/oauth2-proxy/oauth2-proxy/releases/download/${OAUTH2_PROXY_VERSION}/oauth2-proxy-${OAUTH2_PROXY_VERSION}.linux-amd64.go1.14.2.tar.gz"
mv oauth2-proxy-*.tar.gz oauth2-proxy.tar.gz
echo "$OAUTH2_PROXY_CHECKSUM  oauth2-proxy.tar.gz" | sha256sum -c -
tar -xzf oauth2-proxy.tar.gz -C "$BUILD_DIR/bin" --strip-components=1
rm oauth2-proxy.tar.gz

# write out a start script
cp "${BP_DIR}"/../scripts/start_*.sh "${BUILD_DIR}/bin"
